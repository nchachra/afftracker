{
  "manifest_version": 2,

  "name": "AffiliateTracker",
  "description": "Track affiliates earning commission on your next purchase",
  "version": "2.4.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "AffiliateTracker"
  },

  "background": {
    "scripts": ["constants.js", "trackrequest.js", "md5.js", "enc-base64-min.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content_script.js", "constants.js"],
      "all_frames": true
    }
  ],

  "permissions": [
    "*://*/*",
    "notifications",
    "webRequest",
    "tabs",
    "storage",
    "cookies"
  ]
}
