{
  "manifest_version": 2,

  "name": "AffiliateTracker",
  "description": "Track affiliates earning commission on your next purchase",
  "version": "2.7.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "AffiliateTracker"
  },

  "background": {
    "scripts": ["md5.js", "enc-base64-min.js", "constants.js", "utils.js", "parseutils.js", "atbg.js", "submission.js", "initbg.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["affiliatedomcs.js", "requesthandlercs.js", "constants.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],

  "permissions": [
    "*://*/*",
    "notifications",
    "webRequest",
    "tabs",
    "storage",
    "cookies",
    "management"
  ],

  "web_accessible_resources": ["icons/zoomicon.png"]
}
