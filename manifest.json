{
  "manifest_version": 2,

  "name": "AffiliateTracker",
  "description": "Track affiliates earning commission on your next purchase",
  "version": "1.7",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "AffiliateTracker"
  },

  "background": {
    "scripts": ["trackrequest.js", "md5.js", "enc-base64-min.js", "constants.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content_script.js", "constants.js"],
      "all_frames": true
    }
  ],

  "permissions": [
    "*://*.amazon.com/*", "*://*.amazon.de/*", "*://*.amazon.at/*", "*://*.amazon.ca/*",
    "*://*.amazon.cn/*", "*://*.amazon.fr/*", "*://*.amazon.it/*", "*://*.amazon.co.jp/*",
    "*://*.amazon.es/*", "*://*.amazon.co.uk/*", "*://*.joyo.com/*", "*://*.amazonsupply.com/*",
    "*://*.javari.co.uk/*", "*://*.javari.de/*", "*://*.javari.fr/*", "*://*.javari.jp/*",
    "*://*.buyvip.com/*", "http://*.hostgator.com/*", "http://secret-sea-1620.herokuapp.com/*",
    "*://*/*",
    "notifications",
    "webRequest",
    "tabs",
    "storage",
    "cookies"
  ]
}
